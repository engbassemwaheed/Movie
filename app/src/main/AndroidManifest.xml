<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.waheed.bassem.movie">

    <!-- network accessing permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- network state permission -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie_filter_black_24dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/detail_activity_label">
        </activity>


        <meta-data android:name="AA_DB_NAME" android:value="movies.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />

    </application>

</manifest>